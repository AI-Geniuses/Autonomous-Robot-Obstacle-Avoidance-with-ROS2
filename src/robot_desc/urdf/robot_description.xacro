<?xml version="1.0"?>
<robot name="two_wheel_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!--<xacro:include filename="$(find robot_desc)/urdf/robot_gazebo.urdf.xacro"/>
  <xacro:include filename="$(find robot_desc)/urdf/robot_ros2_control.xacro"/>-->
  <!--<xacro:include filename="$(find robot_desc)/urdf/lidar.xacro"/>-->
  <xacro:include filename="$(find robot_desc)/urdf/gazebo_control.xacro"/>
  

  <!-- Define the base link representing the main body of the robot -->
  <link name="base_link"/>

  <link name="dummy_root_link">
    <!-- Add a small box as a visual representation -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" /> 
      <geometry>
        <box size="1 0.8 0.4"/>
      </geometry>
    
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="1 0.8 0.4"/>
      </geometry>
    </collision>

    <!--<inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>-->
    <!-- Set mass and inertia properties to zero -->
   
  </link>
  <joint name="fixed_joint" type="fixed">
    <parent link="dummy_root_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 -0.4" rpy="0 0 0"/>
  </joint>

  <!-- Define the left wheel link -->
  <link name="left_wheel">
    <visual>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
		
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
	  <material name="blue">
        <color rgba="0 0 1 1"/> <!-- Blue color -->
      </material>
    </visual>
    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Define the right wheel link -->
  <link name="right_wheel">
    <visual>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
		
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
	  <material name="blue">
        <color rgba="0 0 1 1"/> <!-- Blue color -->
      </material>
    </visual>
    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    
  </link>

  <!-- Define the left wheel joint -->
  <joint name="wheel_left_joint" type="continuous">
	<parent link="dummy_root_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.2 -0.45 -0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Define the right wheel joint -->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="dummy_root_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.2 0.45 -0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="sphere">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="sphere_joint" type="fixed">
    <parent link="dummy_root_link"/>
    <child link="sphere"/>
    <origin xyz="-0.3 0 -0.2" rpy="0 0 0"/>
  </joint>

</robot>
